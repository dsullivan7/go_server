{
  "family": "pongo-db-init",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/tchr_voice_ecs_execution_role",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "pongo-db-init",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.us-east-2.amazonaws.com/pongo-db-init:${CIRCLE_SHA1}",
      "essential": true,
      "cpu": 10,
      "memory": 512,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/pongo/db-init",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "db-init"
        }
      },
      "secrets": [
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:ssm:us-east-2:${AWS_ACCOUNT_ID}:parameter/dev/tchr_voice/DB_USER"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:us-east-2:${AWS_ACCOUNT_ID}:parameter/dev/tchr_voice/DB_PASSWORD"
        },
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:ssm:us-east-2:${AWS_ACCOUNT_ID}:parameter/dev/tchr_voice/DB_HOST"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:ssm:us-east-2:${AWS_ACCOUNT_ID}:parameter/dev/tchr_voice/DB_PORT"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:ssm:us-east-2:${AWS_ACCOUNT_ID}:parameter/dev/tchr_voice/DB_NAME"
        },
        {
          "name": "DB_DROP",
          "valueFrom": "arn:aws:ssm:us-east-2:${AWS_ACCOUNT_ID}:parameter/dev/tchr_voice/DB_DROP"
        }
      ]
    }
  ]
}
